    "node-mailjet": "^3.3.7",
    "node-redis-pubsub": "^5.0.0",
    "redis": "^4.0.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.0.0",
    "tslib": "^2.0.0"
  },
