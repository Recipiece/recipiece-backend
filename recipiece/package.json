{
  "name": "recipiece",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "nx serve",
    "build": "nx build",
    "docker-test:up": "docker-compose -f ../docker/docker-compose.test.yaml up -d",
    "docker-test:down": "docker-compose -f ../docker/docker-compose.test.yaml down",
    "prisma:migrate:test": "dotenv -e .env.test -- npx prisma migrate dev",
    "prisma:migrate:local": "dotenv -e .env.local -- npx prisma migrate dev",
    "prisma:load-schema": "npx prisma generate",
    "prisma:create-migration": "dotenv -e .env.test -- npx prisma migrate dev --create-only",
    "test": "yarn docker-test:up && yarn prisma:migrate:test && dotenv -e .env.test nx test",
    "run:local": "dotenv -e .env.local -- nx run-many --target=serve --all"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^8.0.0",
